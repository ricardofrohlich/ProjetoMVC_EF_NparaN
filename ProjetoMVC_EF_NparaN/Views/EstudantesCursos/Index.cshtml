@model IEnumerable<ProjetoMVC_EF_NparaN.Models.EstudantesCursos>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudante)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Curso.CursoID) - @Html.DisplayFor(modelItem => item.Curso.NomeCurso)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Estudante.EstudanteId) - @Html.DisplayFor(modelItem => item.Estudante.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EstudantesCursosId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EstudantesCursosId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EstudantesCursosId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
